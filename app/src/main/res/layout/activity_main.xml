<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tip_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subtotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Subtotal:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="24sp"
            android:text="$100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="0%"
            android:textColor="#000000"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/tipSeekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="30"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="30%"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/tipRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/radioButtonTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="10%"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonFifteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="15%"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonEighteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="18%"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonTwentyFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="25%"
            android:textSize="18sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/currentTipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tip Amount:"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentTipAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipRadioGroup"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="24sp"
            tools:text="20%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalWithTipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Total With Tip:"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalWithTipAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="24sp"
            tools:text="$120" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numberOfGuestsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Guests:"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/guestsSpinner"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Next >" />

</LinearLayout>